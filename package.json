  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.0",
    "config": "^3.3.2",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.13",
    "shortid": "^2.2.16"
